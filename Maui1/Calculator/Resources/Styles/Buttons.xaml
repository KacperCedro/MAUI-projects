<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="numberButtonStyle" TargetType="Button">
        <Setter Property="FontSize" Value="30" />
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="FontAttributes" Value="Italic" />
        <Setter Property="BackgroundColor" Value="{StaticResource dark3}"/>
    </Style>
    <Style x:Key="specialButtonStyle" TargetType="Button">
        <Setter Property="FontSize" Value="30" />
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="FontAttributes" Value="Italic" />
        <Setter Property="BackgroundColor" Value="{StaticResource dark4}"/>
    </Style>
    <Style x:Key="equalButtonStyle" TargetType="Button">
        <Setter Property="FontSize" Value="30" />
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="FontAttributes" Value="Italic" />
        <Setter Property="BackgroundColor" Value="{StaticResource dark5}"/>
    </Style>
</ResourceDictionary>